{
  "compilerOptions": {
    "incremental": true,
    "moduleResolution": "node",
    "target": "ES2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "composite": true,
    "declarationMap": true,
    "allowJs": true,
    "types": [
      "node",
      "jest",
      "@types/jest"
    ],
    "module": "CommonJS",
    "declarationDir": "./lib",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": false
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.bench.ts",
    "**/__tests__/**",
    "**/__integration__/**",
    "**/__fixtures__/**"
  ]
}